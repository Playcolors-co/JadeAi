# General
JADEAI_ENV=development
JADEAI_DATA_ROOT=/opt/jadeai/data
JADEAI_CACHE_ROOT=/opt/jadeai/cache

# Perception
JADEAI_FPS=1
JADEAI_RESOLUTION=1280x720
JADEAI_CAPTURE_DEVICE=/dev/video0

# LLM
JADEAI_LLM_MODEL_PATH=/models/llm/gguf/mistral-7b-q4.gguf
JADEAI_LLM_CONTEXT=4096

# Planner / Policy
JADEAI_REQUIRE_CONFIRMATION=true
JADEAI_ALLOWED_APPS=settings,browser,terminal

# HID
JADEAI_HID_MODE=bluetooth
JADEAI_HID_DEVICE_NAME=JadeAI HID
JADEAI_HID_BLE_ADAPTER=hci0

# Memory
JADEAI_MEMORY_DB_PATH=/opt/jadeai/memory/chroma
