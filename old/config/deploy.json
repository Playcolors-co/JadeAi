{
    "version": "1.0.0",
    "default_component": "docker",
    "deployment_status_file": "/opt/control-panel/.deployment_status",
    "components": {
        "system": {
            "script": "system_setup.sh",
            "backup_dir": "/opt/control-panel/backups/system"
        },
        "docker": {
            "script": "docker_setup.sh",
            "backup_dir": "/opt/control-panel/backups/docker"
        },
        "portainer": {
            "script": "portainer_setup.sh",
            "backup_dir": "/opt/control-panel/backups/portainer"
        },
        "web_admin": {
            "script": "web_admin_setup.sh",
            "backup_dir": "/opt/control-panel/backups/web_admin"
        },
        "bluetooth_combo": {
            "script": "bluetooth_combo_setup.sh",
            "backup_dir": "/opt/control-panel/backups/bluetooth_combo"
        },
        "video": {
            "script": "video_setup.sh",
            "backup_dir": "/opt/control-panel/backups/video"
        },
        "wifi": {
            "script": "wifi_setup.sh",
            "backup_dir": "/opt/control-panel/backups/wifi"
        }
    }
}
